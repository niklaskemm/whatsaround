<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/popup_bg">

    <TextView
            android:text="Dies ist ein Dummytext, um die Größe des Popups darzustellen"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_popup"
            app:layout_constraintTop_toBottomOf="@+id/tv_popupTitle"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textColor="@color/color_white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/oswald_light"
            android:textAlignment="center"/>

    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_popupTitle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/oswald_light"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/color_white"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/iv_popupClose"
            app:layout_constraintTop_toTopOf="@+id/tv_popupTitle"
            app:layout_constraintEnd_toEndOf="@+id/tv_popup"
    />

</androidx.constraintlayout.widget.ConstraintLayout>