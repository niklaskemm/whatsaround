<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/bg_main">

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="20dp"
            android:id="@+id/gl_left"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gl_right"
            app:layout_constraintGuide_end="20dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="20dp"
            android:id="@+id/gl_top"
            android:layout_marginEnd="411dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="731dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="0.43"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="696dp"
            android:id="@+id/gl_bottom"/>
    <ToggleButton
            android:text="@string/btn_toggle_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/gl_left"
            android:id="@+id/btn_toggle_update_coordinates"
            android:fontFamily="@font/gudea"
            app:layout_constraintEnd_toStartOf="@+id/gl_right"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="132dp"
            app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
            android:textColor="@color/color_btn_text"
            android:background="@color/color_btn"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_title"
            android:fontFamily="@font/oswald_light"
            android:textSize="50sp"
            android:textColor="@color/color_title"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/gl_top"/>
    <Button
            android:text="Show Results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_changeActivity"
            app:layout_constraintEnd_toStartOf="@+id/gl_right"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/gl_left"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_toggle_update_coordinates"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <TextView
            android:text="Toggle Updates"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_toggle_update_coordinates"
            app:layout_constraintStart_toStartOf="@+id/gl_left"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/gl_right"
            android:layout_marginEnd="8dp"
            android:textColor="@color/color_main"/>
    <Switch
            android:text="Toggle Updates "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swt_toggle_updates" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gl_bottom" app:layout_constraintStart_toStartOf="@+id/gl_left"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/gl_right"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textColor="@color/color_main"/>
    <SeekBar
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="@+id/gl_left"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
            app:layout_constraintEnd_toStartOf="@+id/gl_right"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>